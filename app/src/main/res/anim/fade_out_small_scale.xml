<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <alpha
        android:duration="300"
        android:startOffset="100"
        android:fromAlpha="0.0"
        android:toAlpha="1.0" />

    <scale
        android:duration="300"
        android:startOffset="100"
        android:fromXScale="90%"
        android:fromYScale="90%"
